<Window x:Class="ContactCar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactCar"
        xmlns:ctrl="clr-namespace:ContactCar.Controls"
        mc:Ignorable="d"
        Title="ContactCar" Height="350" Width="525" WindowState="Maximized"
        MinHeight="500" MinWidth="525">
    <Grid>
        <ctrl:LoginControl x:Name="LoginControl" Visibility="Visible"/>
        <ctrl:SignUpControl x:Name="SignUpControl" Visibility="Collapsed" Background="White"/>
        <ctrl:InitialControl x:Name="initControl" Visibility="Collapsed"/>
    </Grid>
</Window>
